datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    email        String   @unique
    username     String   @unique
    password     String   @db.String
    role         Role     @default(USER)
    refreshToken String[] @db.String
    manga        Manga[]

    @@index([email, username])
}

enum Role {
    UPLOADER
    ADMIN
    USER
}

model Manga {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    author      String[]
    description String
    cover       String
    chapters    Chapter[]
    status      Status
    tags        Tags[]
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    user        User?     @relation(fields: [userId], references: [id])
    userId      String?   @db.ObjectId
    totalViews  Int       @default(0)
}

enum Status {
    ONGOING
    COMPLETED
    HIATUS
    CANCELLED
}

enum Tags {
    ACTION
    ADVENTURE
    COMEDY
    DRAMA
    ECCHI
    FANTASY
    HAREM
    HISTORICAL
    HORROR
    JOSEI
    MAGIC
    MARTIAL_ARTS
    MECHA
    MILITARY
    MYSTERY
    PSYCHOLOGICAL
    ROMANCE
    SCHOOL_LIFE
    SCI_FI
    SEINEN
    SHOUJO
    SHOUNEN
    SLICE_OF_LIFE
    SPORTS
    SUPERPOWERS
    SUPERNATURAL
    THRILLER
    TRAGEDY
    VAMPIRES
    YURI
}

model Chapter {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title     String
    pages     String[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    manga     Manga    @relation(fields: [mangaId], references: [id])
    mangaId   String   @db.ObjectId

    @@index([mangaId])
}
